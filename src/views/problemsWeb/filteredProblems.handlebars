
<div class="card">
    <div class="card-body">
        <article class="mt-3">

            <h3 class="mb-5"> Todos problemas de: <strong>{{title}}</strong> </h3>
            <hr>
            <form action="/problems/filters/{{title}}/dateAddition" method="post">
                <input type="hidden" name="category" value="{{title}}">
                <select name="dateAddition" class="form-select">
                    <option value="-1"> Mais recentes </option>
                    <option value="1"> Mais antigos </option>
                </select>
                <button type="submit" class="btn btn-primary mt-3"> Filtrar </button>
            </form>
                {{#each problemsFiltered}}
                    <div class="col-md-6 mt-4 mx-5 border p-4">
                        <form action="/problems/view/{{_id}}" method="get">
                            <h3 class="text-center"> {{ title }} </h3>
                            <hr>
                            <small> {{summary}} </small><br/>
                            <small> {{ status }} </small><br/>
                            <small> {{created_at}} </small><br/>
                            <button type="submit" class="btn btn-success mt-2"> Observar problema </button>
                        </form>
                    </div>

                    {{else}}
                        <p> Nenhum problema registrado </p>
                    {{/each}}
        </article>
                    

    </div>
</div>
<form action="/problems/post" method="get">
    <button type="submit" class="btn btn-success mt-2"> Poste seu problema </button>
</form>